{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h4 class="center-align">User</h4>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>mot de passe</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>email Valide?</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstNameUser }}</td>
            </tr>
            <tr>
                <th>nom</th>
                <td>{{ user.lastNameUser }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ user.pseudoUser }}</td>
            </tr>
            <tr>
                <th>Avatar</th>
                <td>{{ user.photoAvatarUser }}</td>
            </tr>
            <tr>
                <th>Date d'anniversaire</th>
                <td>{{ user.birthdayDateUser ? user.birthdayDateUser|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>code postal</th>
                <td>{{ user.postalCodeUser }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ user.adressUser }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ user.cityUser }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">retour à la liste</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">éditer</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
