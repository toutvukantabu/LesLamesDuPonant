{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>FirstNameUser</th>
                <td>{{ user.firstNameUser }}</td>
            </tr>
            <tr>
                <th>LastNameUser</th>
                <td>{{ user.lastNameUser }}</td>
            </tr>
            <tr>
                <th>PseudoUser</th>
                <td>{{ user.pseudoUser }}</td>
            </tr>
            <tr>
                <th>PhotoAvatarUser</th>
                <td>{{ user.photoAvatarUser }}</td>
            </tr>
            <tr>
                <th>BirthdayDateUser</th>
                <td>{{ user.birthdayDateUser ? user.birthdayDateUser|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>PostalCodeUser</th>
                <td>{{ user.postalCodeUser }}</td>
            </tr>
            <tr>
                <th>AdressUser</th>
                <td>{{ user.adressUser }}</td>
            </tr>
            <tr>
                <th>CityUser</th>
                <td>{{ user.cityUser }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">back to list</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
