{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>IsVerified</th>
                <th>FirstNameUser</th>
                <th>LastNameUser</th>
                <th>PseudoUser</th>
                <th>PhotoAvatarUser</th>
                <th>BirthdayDateUser</th>
                <th>PostalCodeUser</th>
                <th>AdressUser</th>
                <th>CityUser</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                <td>{{ user.firstNameUser }}</td>
                <td>{{ user.lastNameUser }}</td>
                <td>{{ user.pseudoUser }}</td>
                <td>{{ user.photoAvatarUser }}</td>
                <td>{{ user.birthdayDateUser ? user.birthdayDateUser|date('Y-m-d') : '' }}</td>
                <td>{{ user.postalCodeUser }}</td>
                <td>{{ user.adressUser }}</td>
                <td>{{ user.cityUser }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}
