{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>mot de passe</th>
                <th>Email Verifié ?</th>
                <th>Prénom</th>
                <th>nom</th>
                <th>Pseudo</th>
                <th>Avatar</th>
                <th>Date d'anniversaire</th>
                <th>Code postal</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>action</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                <td>{{ user.firstNameUser }}</td>
                <td>{{ user.lastNameUser }}</td>
                <td>{{ user.pseudoUser }}</td>
                <td>{{ user.photoAvatarUser }}</td>
                <td>{{ user.birthdayDateUser ? user.birthdayDateUser|date('Y-m-d') : '' }}</td>
                <td>{{ user.postalCodeUser }}</td>
                <td>{{ user.adressUser }}</td>
                <td>{{ user.cityUser }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}
