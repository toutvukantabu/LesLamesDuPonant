{% if amhe.active ==1 %}


<div class="carousel carousel-slider center">
	<div class="carousel-item  white-text" href="#one!">
		<img src="{{asset('uploads/amhe/') ~ amhe.photoOneAMHE }}" alt="">
	</div>
	<div class="carousel-item  white-text" href="#one!">
		<img src="{{asset('uploads/amhe/') ~ amhe.photoTwoAMHE }}" alt="">
	</div>
	<div class="carousel-item  white-text" href="#one!">
		<img src="{{asset('uploads/amhe/') ~ amhe.photoThreeAMHE }}" alt=""><img
			src="{{asset('uploads/Parallax3.jpg')}}" alt="">
	</div>
</div>
{# AMHE
================ #}



<div class="container white amhe-container ">
	<div class="row z-depth-5">
