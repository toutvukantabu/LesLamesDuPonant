{% block title %}Hello LeForumController!{% endblock %}

{% block body %}
<div class="container">
    <div class="col xl12">
        {# PAGINATION #}
        <ul class="pagination">
            <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
