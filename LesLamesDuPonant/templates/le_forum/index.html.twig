                        {% for category_section_forum in home_section_forum.categoryHomeSectionforum %}
                        <tbody>
                            <tr>
                                {% if category_section_forum.active == 1 %}
                                <td>
                                    <li><a href="{{path('le_forum_category', {'slug': category_section_forum.slug })}}">
                                            {{category_section_forum.titlecategory}}</a></li>
                                </td>
                                {% endif %}
                            </tr>
                        </tbody>
                    </table>
                    {% endfor %}
                    {% endfor %}
