							<td>{{ time_stamp.id }}</td>
							<td>{{ time_stamp.titleTimeStamp|striptags|u.truncate(50)|raw }}</td>
							<td>{{ time_stamp.descriptionTimeStamp|striptags|u.truncate(50)|raw }}</td>
