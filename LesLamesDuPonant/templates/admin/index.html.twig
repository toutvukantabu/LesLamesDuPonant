{% extends 'base.html.twig' %}

{% block title 'administration' %}


{% block body %}
<div class="container" id="homeAdmin">
	<div class="row">
		<div class="col s12 m8 l9 xl10">
			<div id="User" class="section scrollspy">
				<h4 class="center-align">table des utilisateurs</h4>

				<table class="table tableAdmin display" data-order='[[ 1, "asc" ]]' data-page-length='20' id="myTable">
					<thead>
						<tr>
							<th>Id</th>
							<th>Email</th>
							<th>Roles</th>
							<th>Pseudo utilisateur</th>
							<th>Code postal</th>
							<th>action</th>
						</tr>
					</thead>
					<tbody>
						{% for user in user %}
						<tr>
							<td>{{ user.id }}</td>
							<td>{{ user.email }}</td>
							<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
							<td>{{ user.pseudoUser }}</td>
							<td>{{ user.postalCodeUser }}</td>
							<td>
								<a href="{{ path('user_show', {'id': user.id}) }}">voir</a>
								<a href="{{ path('user_edit', {'id': user.id}) }}">éditer</a>
							</td>
						</tr>
						{% else %}
						<tr>
							<td colspan="14">Aucun enregistrement trouvé.</td>
						</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>

			<div id="message" class="section scrollspy">
				<h4 class="center-align">Messagerie</h4>
				<table class="table" id="myTable2">
					<thead>
						<tr>
							<th>Id</th>
							<th>Auteur du message</th>
							<th>Nom de famille de l'auteur</th>
							<th>contenu du message</th>
							<th>Email</th>
							<th>Date du message</th>
							<th>action</th>
						</tr>
					</thead>
					<tbody>
						{% for contact_message in contact_messages %}
						<tr>
							<td>{{ contact_message.id }}</td>
							<td>{{ contact_message.authorNameContactMessage }}</td>
							<td>{{ contact_message.authorLastNamecContactMessage }}</td>
							<td>{{ contact_message.contentContactMessage }}</td>
							<td>{{ contact_message.emailContactMessage }}</td>
							<td>{{ contact_message.dateContactMessage ? contact_message.dateContactMessage|date('Y-m-d H:i:s') : '' }}
							</td>
							<td>
								<a href="{{ path('contact_message_show', {'id': contact_message.id}) }}">voir</a>
								<a href="{{ path('contact_message_edit', {'id': contact_message.id}) }}">éditer</a>
							</td>
						</tr>
						{% else %}
						<tr>
							<td colspan="7">Aucun enregistrement trouvé.</td>
						</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
			<div id="discipline" class="section scrollspy">
				<h4 class="center-align">Disciplines page d'accueil</h4>
				<table class="table" id="myTable3">
					<thead>
						<tr>
							<th>Id</th>
							<th>Nom de la discipline</th>
							<th>image</th>
							<th>description</th>
							<th>action</th>
						</tr>
					</thead>
					<tbody>
						{% for home_discipline in home_disciplines %}
						<tr>
							<td>{{ home_discipline.id }}</td>
							<td>{{ home_discipline.nameDiscipline }}</td>
							<td>{{ home_discipline.imageHomeDiscipline }}</td>
							<td>{{ home_discipline.descriptionDiscipline }}</td>
							<td>
								<a href="{{ path('home_discipline_show', {'id': home_discipline.id}) }}">voir</a>
								<a href="{{ path('home_discipline_edit', {'id': home_discipline.id}) }}">éditer</a>
							</td>
						</tr>
						{% else %}
						<tr>
							<td colspan="5">Aucun enregistrement trouvé.</td>
						</tr>
						{% endfor %}
					</tbody>
				</table>
				<a href="{{ path('home_discipline_new') }}">Créer une nouvelle discipline</a>
			</div>
			<div id="homepicture" class="section scrollspy">
			 <table class="table tableAdmin display" id="myTable4">
			 <h4 class="center-align">édition images logo page d'accueil</h4>
        <thead>
            <tr>
                <th>Id</th>
                <th>HomeLogoPicture</th>
                <th>HomeTitlePicture</th>
                <th>HomeParallax1</th>
                <th>HomeParallax2</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
       {% for home_picture in home_pictures %} 
            <tr>
                <td>{{ home_picture.id }}</td>
                <td>{{ home_picture.homeLogoPicture }}</td>
                <td>{{ home_picture.homeTitlePicture }}</td>
                <td>{{ home_picture.homeParallax1 }}</td>
                <td>{{ home_picture.homeParallax2 }}</td>
                <td>
                    <a href="{{ path('home_pictures_show', {'id': home_picture.id}) }}">show</a>
                    <a href="{{ path('home_pictures_edit', {'id': home_picture.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('home_pictures_new') }}">Create new</a>
			</div>
		
			<div id="agenda" class="section scrollspy">
				<table class="table tableAdmin display" id="myTable5">
					<h4 class="center-align">Agenda</h4>
					<thead>
						<tr>
							<th>Id</th>
							<th>titre de l'évenement</th>
							<th>déscription de l'évenement</th>
							<th>date de l'évenement</th>
							<th>heure de l'évènement</th>
							<th>action</th>
						</tr>
					</thead>
					<tbody>
						{% for time_stamp in time_stamps %}
						<tr>
							<td>{{ time_stamp.id }}</td>
							<td>{{ time_stamp.titleTimeStamp }}</td>
							<td>{{ time_stamp.descriptionTimeStamp }}</td>
							<td>{{ time_stamp.dateTimeStamp ? time_stamp.dateTimeStamp|date('Y-m-d') : '' }}</td>
							<td>{{ time_stamp.hourTimeStamp ? time_stamp.hourTimeStamp|date('H:i:s') : '' }}</td>
							<td>
								<a href="{{ path('time_stamp_show', {'id': time_stamp.id}) }}">voir</a>
								<a href="{{ path('time_stamp_edit', {'id': time_stamp.id}) }}">éditer</a>
							</td>
						</tr>
						{% else %}
						<tr>
							<td colspan="6">Aucun enregistrement trouvé.</td>
						</tr>
						{% endfor %}
					</tbody>
				</table>
				<a href="{{ path('time_stamp_new') }}">Créer un nouvel évenement</a>
			</div>
			<div id="amhe" class="section scrollspy">
			 <h4 class="center-align">édition amhe image et texte</h4>

    <table class="table tableAdmin display" id="myTable6">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Photo carousel 1</th>
                <th>Photo carousel 2</th>
                <th>Photo carousel 3</th>
                <th>action</th>
            </tr>
        </thead>
        <tbody>
        {% for amhe in amhes %}
            <tr>
                <td>{{ amhe.id }}</td>
                <td>{{ amhe.titleAMHE }}</td>
                <td>{{ amhe.DescriptionAMHE | raw}}</td>
                <td><img src="{{asset ('/uploads/amhe/'~ amhe.photoOneAMHE) }}" alt="" height="50px"></td>
                <td>{{ amhe.photoTwoAMHE }}</td>
                <td>{{ amhe.photoThreeAMHE }}</td>
                <td>
                    <a href="{{ path('amhe_show', {'id': amhe.id}) }}">voir</a>
                    <a href="{{ path('amhe_edit', {'id': amhe.id}) }}">éditerer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">pas de donnée trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('amhe_new') }}">créer une nouvelle</a>
			</div>
			
		<div id="medievalFamily" class="section scrollspy">
    <h4 class="center-align">MedievalFamily index</h4>
<table class="table tableAdmin display" id="myTable7"
    <table >
        <thead>
            <tr>
                <th>Id</th>
                <th>TitleMedievalFamily</th>
                <th>DescriptionMedievalFamily</th>
                <th>action</th>
            </tr>
        </thead>
        <tbody>
        {% for medieval_family in medieval_families %}
            <tr>
                <td>{{ medieval_family.id }}</td>
                <td>{{ medieval_family.titleMedievalFamily }}</td>
                <td>{{ medieval_family.descriptionMedievalFamily | raw }}</td>
                <td>
                    <a href="{{ path('medieval_family_show', {'id': medieval_family.id}) }}">voir</a>
                    <a href="{{ path('medieval_family_edit', {'id': medieval_family.id}) }}">éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun enregistrement trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('medieval_family_new') }}">Créer un nouveau</a>


			</div>
		
		<div id="lldp" class="section scrollspy">
			</div>
		
		
		
		</div>
		<div class="col hide-on-small-only m3 l2 ">
			<ul class="section table-of-contents fixed">
				<h6 class="center-align">Membres du site</h6>
				<li>
					<a href="#User">édition des utilisateurs</a>
				</li>
				<div class="divider"></div>
				<h6 class="center-align">Messagerie</h6>
				<li>
					<a href="#message">messages</a>
				</li>
				<div class="divider"></div>
				<h6 class="center-align">Page d'accueil</h6>
				<li>
					<a href="#disciplines">édition des disciplines</a>
				</li>
				<a href="#homepicture">édition images/logo page d'accueil</a>

				<li>
					<a href="#agenda">Agenda/évenement</a>
				</li>
				<div class="divider"></div>
				<h6 class="center-align">Les Amhe</h6>
				<li>
					<a href="#amhe">édition des Amhe + images</a>
				</li>
				<li>
					<a href="#medievalFamily">éditer famille médievale</a>
				</li>
				<li>
					<a href="#lldp">édition association Lames du Ponant</a>
				</li>
			</ul>
		</div>
	</div>
</div>
{% endblock %}