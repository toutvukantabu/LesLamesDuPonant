							<td><img src="{{asset('/uploads/parallax/') ~ home_picture.homeParallax2 }}" alt=""></td>
							<td>
								<a href="{{ path('home_pictures_show', {'id': home_picture.id}) }}">
									<button class="btn blue">
										<i class=" tiny material-icons ">visibility</i>
									</button>
								</a>
							</td>
							<td>
								<a href="{{ path('home_pictures_edit', {'id': home_picture.id}) }}">
									<button class="btn orange">
										<i class=" tiny material-icons ">create</i>
									</button>
								</a>
							</td>
