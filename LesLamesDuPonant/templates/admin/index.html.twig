						</tr>
						{% endfor %}
					</tbody>
				</table>
				<a href="{{ path('home_pictures_new') }}">Create new</a>
			</div>

			{# TIMESTAMP
======= #}
			<div id="agenda">
				<table class="table tableAdmin display datatable" id="myTable5">
					<h4 class="center-align">Agenda</h4>
					<a href="{{ path('time_stamp_new') }}"
						class="btn-floating btn-large waves-effect waves-light blue float-right ">
						<i class="material-icons">add</i>
					</a>
					<thead>
						<tr>
							<th>Id</th>
							<th>titre de l'évenement</th>
							<th>déscription de l'évenement</th>
							<th>date de l'évenement</th>
