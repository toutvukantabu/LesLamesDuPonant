<div class="container" id="homeAdmin" width="80%">
	<div class="row">
		<div class="col s12 m12 l12 xl12 ">
			{# USER
========== #}
			<div id="User">
				<h4 class="center-align">table des utilisateurs</h4>
				<table class="table tableAdmin  display datatable"
 data-page-length='10' id="myTable">
					<thead>
						<tr>
							<th>Id</th>
							<th>Email</th>
							<th>Pseudo utilisateur</th>
							<th>Code postal</th>
							<th>voir</th>
							<th>éditer</th>
							<th>supprimer</th>
						</tr>
					</thead>
					<tbody>
						{% for user in user %}
						<tr>
							<td>{{ user.id }}</td>
							<td>{{ user.email }}</td>
							<td>{{ user.pseudoUser }}</td>
							<td>{{ user.postalCodeUser }}</td>
							<td>
								<a href="{{ path('user_show', {'id': user.id}) }}">
									<button class="btn blue">
										<i class=" tiny material-icons ">visibility</i>
									</button>
								</a>
							</td>
							<td>
								<a href="{{ path('user_edit', {'id': user.id}) }}">
									<button class="btn orange">
										<i class=" tiny material-icons ">create</i>
									</button>
								</a>
							</td>
							<td>
								<form method="post" action="{{ path('user_delete', {'id': user.id}) }}"
									onsubmit="return confirm('Voulez vous vraiment supprimer cet utilisateur?');">
									<input type="hidden" name="_method" value="DELETE">
									<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
									<button class="btn red">
										<i class=" tiny material-icons ">delete</i>
									</button>
								</form>

							</td>
						</tr>
						{% else %}
						<tr>
							<td colspan="14">Aucun enregistrement trouvé.</td>
						</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
			{# MESSAGERIE
=========== #}
			<div id="message">
				<h4 class="center-align">Messagerie</h4>
				<table class="table tableAdmin display datatable" id="myTable2">
					<thead>
						<tr>
							<th>Id</th>
							<th>Auteur du message</th>
							<th>Nom de famille de l'auteur</th>
							<th>contenu du message</th>
							<th>Email</th>
							<th>Date du message</th>
							<th>voir</th>
							<th>supprimer</th>

						</tr>
					</thead>
					<tbody>
						{% for contact_message in contact_messages %}
						<tr>
							<td>{{ contact_message.id }}</td>
							<td>{{ contact_message.authorNameContactMessage }}</td>
							<td>{{ contact_message.authorLastNamecContactMessage }}</td>
							<td>{{ contact_message.contentContactMessage|striptags|u.truncate(40)|raw }}</td>
							<td>{{ contact_message.emailContactMessage |striptags|u.truncate(10)|raw}}</td>
							<td>{{ contact_message.dateContactMessage ? contact_message.dateContactMessage|date('Y-m-d H:i:s') : '' }}
							</td>
							<td>
								<a href="{{ path('contact_message_show', {'id': contact_message.id}) }}">
									<button class="btn blue">
										<i class=" tiny material-icons ">visibility</i>
									</button>
								</a>
							</td>
							<td>
								<form method="post"
									action="{{ path('contact_message_delete', {'id': contact_message.id}) }}"
									onsubmit="return confirm('Confirmer la suppression?');">
									<input type="hidden" name="_method" value="DELETE">
									<input type="hidden" name="_token"
										value="{{ csrf_token('delete' ~ contact_message.id) }}">
									<button class="btn red">
										<i class=" tiny material-icons ">delete</i>
									</button>
								</form>
							</td>
						</tr>
						{% else %}
						<tr>
							<td colspan="7">Aucun enregistrement trouvé.</td>
						</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
			{# DISCIPLINE
=========== #}
			<div id="disciplines">
				<h4 class="center-align">Disciplines page d'accueil</h4>
				<table class="table  tableAdmin display datatable" id="myTable3">
					<thead>
						<tr>
							<th>Id</th>
							<th>Nom de la discipline</th>
							<th>image</th>
							<th>description</th>
							<th>voir</th>
							<th>éditer</th>
							<th>supprimer</th>
						</tr>
					</thead>
					<tbody>
						{% for home_discipline in home_disciplines %}
						<tr>
							<td>{{ home_discipline.id }}</td>
							<td>{{ home_discipline.nameDiscipline }}</td>
							<td><img src="{{asset('/uploads/discipline/') ~ home_discipline.imageHomeDiscipline }}"
									alt=""></td>
							<td>{{ home_discipline.descriptionDiscipline|striptags|u.truncate(50)|raw}}</td>
							<td>
								<a href="{{ path('home_discipline_show', {'id': home_discipline.id}) }}">
									<button class="btn blue">
										<i class=" tiny material-icons ">visibility</i>
									</button>
								</a>
							</td>
							<td>
								<a href="{{ path('home_discipline_edit', {'id': home_discipline.id}) }}">
									<button class="btn orange">
										<i class=" tiny material-icons ">create</i>
									</button>
								</a>
							</td>
							<td>
								<form method="post"
									action="{{ path('home_discipline_delete', {'id': home_discipline.id}) }}"
									onsubmit="return confirm('Confirmer la suppression?');">
									<input type="hidden" name="_method" value="DELETE">
									<input type="hidden" name="_token"
										value="{{ csrf_token('delete' ~ home_discipline.id) }}">
									<button class="btn red">
										<i class=" tiny material-icons ">delete</i>
									</button>
								</form>
							</td>
						</tr>
						{% else %}
						<tr>
							<td colspan="5">Aucun enregistrement trouvé.</td>
						</tr>
						{% endfor %}
					</tbody>
				</table>
				<a href="{{ path('home_discipline_new') }}">Créer une nouvelle discipline</a>
			</div>
			{# HOME PICTURE
================ #}
